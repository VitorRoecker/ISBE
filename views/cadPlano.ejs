<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <title>Login - Cadastro</title>
</head>

<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        width: 100vw;
        height: 100vh;

        display: flex;
        flex-direction: column;

        justify-content: center;
        align-items: center;
    }

    .container {
        width: 100%;
        height: 90%;

        display: flex;
    }

    .container-grid {
        width: 100%;
        height: 90%;

        padding: 20px 40px;
    }

    .card-size {
        height: 88%;
        overflow-y: auto;
    }

    .modal {
        width: 600px;
    }

    .modal.modal-fixed-footer {
        height: 35%;
    }
</style>

<script>
    $(document).ready(function () {
        $('.modal').modal();
    });
</script>

<body>
    <h1>Planos</h1>
    <div class="container">
        <div class="container-grid z-depth-5">
            <a class="waves-effect waves-light btn-small red modal-trigger" style="margin-bottom: 20px;"
                href="#modal1">Adicionar</a>

            <div class="card card-size">
                <table class="striped centered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Valor</th>
                            <th>Descrição</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% planos.forEach(function(plano){ %>
                            <tr>
                                <td>
                                    <%= plano.Id %>
                                </td>
                                <td>
                                    <%= plano.Nome %>
                                </td>
                                <td>
                                    <%= plano.ValorParcela %>
                                </td>
                                <td>
                                    <%= plano.Descricao %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <form id="modal1" class="modal modal-fixed-footer">
            <div class="modal-content">
                <div class="row">
                    <div class="input-field col s6">
                        <input id="nome" type="text" class="validate">
                        <label for="nome">Nome</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="valorParcela" type="text" class="validate">
                        <label for="valorParcela">Valor Parcela</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="descricao" class="materialize-textarea"></textarea>
                        <label for="descricao">Descrição</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cadastrar</a>
            </div>
        </form>
    </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>